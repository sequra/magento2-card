<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/sequra_card/StartCardQuery" method="GET">
        <service class="Sequra\Card\Api\CardQueryInterface" method="startQuery"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/sequra_card/GetCardQuery" method="GET">
        <service class="Sequra\Card\Api\CardQueryInterface" method="getQueryResult"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
